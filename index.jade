mixin bannerGrid(grid, link, img, p, h, specialCopy, brand)
	div(class="span#{grid}")
			a.bannerGrid(href="#{link}")
				if specialCopy
					img.special(src="assets/images/#{img}" alt="#{p}")
					.specialOffer
						if brand
							.brand
								svg(viewBox="0 0 600 600" width="100" height="100")
									use(xlink:href="#{brand}" x="0" y="0")
						if specialCopy
							p !{specialCopy}
				else
					img(src="assets/images/#{img}" alt="#{p}")
					.specialOffer
						if brand
							.brand
								svg(viewBox="0 0 600 600" width="100" height="100")
									use(xlink:href="#{brand}" x="0" y="0")
						if specialCopy
							p !{specialCopy}

				.copy
					p= p
					h5= h
